<div class="row link_related">
  <div class="input-field col m6">
    <%- if devise_mapping.registerable? && controller_name != "registrations" %>
      <%= link_to t("page.views.devise.shared.signup"), new_registration_path(resource_name) %><br />
    <% end -%>
  </div>
  <div class="input-field col m6">
    <%- if devise_mapping.recoverable? && controller_name != "passwords" && controller_name != "registrations" %>
      <%= link_to t("page.views.devise.shared.password"), new_password_path(resource_name) %><br />
    <% end -%>

  </div>
</div>




