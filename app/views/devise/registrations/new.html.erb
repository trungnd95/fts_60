<%= content_for :title do %>
  <%= t "page.views.devise.registrations.new" %>
<% end %>

<div class="row">
  <div class="col m6 offset-m3">
    <div class="card card-panel z-depth-2">
      <%= form_for(resource,
        as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="row heading-form">
            <div class="col m12 center">
              <h5 class="login_form_text">FTS Signup</h5>
            </div>
          </div>
          <%= render "shared/errors", object: f.object %>
          <div class="row">
            <div class="input-field col m12">
              <i class="fa fa-user prefix icon_form_auth" aria-hidden="true"></i>
              <%= f.text_field :name, autofocus: true %>
              <%= f.label :name %>
            </div>
          </div>

          <div class="row">
            <div class="input-field col m12">
              <i class="fa fa-envelope-o prefix icon_form_auth" aria-hidden="true"></i>
              <%= f.email_field :email %>
              <%= f.label :email %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col m12">
              <i class="fa fa-key prefix icon_form_auth" aria-hidden="true"></i>
              <%= f.password_field :password, autocomplete: "off" %>
              <%= f.label :password %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col m12">
              <i class="fa fa-key prefix icon_form_auth" aria-hidden="true"></i>
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>
          </div>

          <div class="row">
            <div class="input-field col m12">
              <div class="actions">
                <%= f.submit t("page.views.devise.registrations.submit"),
                  class: "btn waves-effect waves-light pink col s12" %>
              </div>
            </div>
          </div>
          <%= render "devise/shared/links" %>
      <% end %>
      <div class="divider"></div>
      <div class="row">
        <div class="col m12">
          <p class="center-align">
            <%= link_to(user_facebook_omniauth_authorize_path) do %>
              <i class="fa fa-facebook" aria-hidden="true"></i>
              <%= t("page.views.devise.sessions.signin.facebook") %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
